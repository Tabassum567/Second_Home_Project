<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Approval</title>
    <link rel="stylesheet" href="/css/postAdApproval.css" />
    <link rel="stylesheet" href="/css/navbar.css" />
    <link rel="stylesheet" href="/css/dashboard.css" />
  </head>
  <body>
    <div class="container">
      <%- include("navbar"); -%>
      <div class="main">
        <div class="main-body">
          <div class="Home-section">
            <h2>Second Home</h2>
            <h3>Ad Posts Approval</h3>
            <% approvals.forEach((item) => { %>
            <div class="section">
              <div class="data">
                <form
                  class="Owners-form"
                  action="postAdApprovals"
                  method="post"
                >
                  <input
                    type="hidden"
                    name="id"
                    id="id"
                    value="<%= item._id%>"
                    readonly
                  />
                  <div class="name-category">
                    <label for="Name">Name</label
                    ><input
                      type="text"
                      name="contact_name"
                      id="contact_name"
                      value="<%= item.contact_name%>"
                      readonly
                    />
                    <label for="contact_number">Contact Number</label
                    ><input
                      type="text"
                      name="contact_number"
                      id="contact_number"
                      value="<%= item.contact_number%>"
                      readonly
                    />
                    <label for="contact_email">Email Address</label
                    ><input
                      type="email"
                      name="email_address"
                      id="email_address"
                      value="<%= item.contact_email%>"
                      readonly
                    />
                  </div>
                  <div class="property-type-div">
                    <label for="property-type">Property Type</label
                    ><input
                      type="text"
                      name="property_type"
                      id="property_type"
                      value="<%= item.property_type%>"
                      readonly
                    />
                    <label for="city">City</label
                    ><input
                      type="text"
                      name="city"
                      id="city"
                      value="<%= item.city%>"
                      readonly
                    />
                    <label for="address">Address</label
                    ><input
                      type="text"
                      name="address"
                      id="address"
                      value="<%= item.address%>"
                      readonly
                    />
                  </div>
                  <div class="rooms-category">
                    <label for="rooms">Rooms</label
                    ><input
                      type="text"
                      name="rooms"
                      id="rooms"
                      value=""
                      readonly
                    />
                    <label for="property_title">Property Title</label
                    ><input
                      type="text"
                      name="property_title"
                      id="property_title"
                      value="<%= item.property_title%>"
                      readonly
                    />
                    <label for="availability_period">Availability Period</label
                    ><input
                      type="availabilty_period"
                      name="availabilty_period"
                      id="availabilty_period"
                      value="<%= item.availability_period%>"
                      readonly
                    />
                    <label for="monthly_rent">Monthly Rent</label
                    ><input
                      type="text"
                      name="monthly_rent"
                      id="monthly_rent"
                      value="<%= item.monthly_rent%>"
                      readonly
                    />
                    <label for="currency">Currency</label
                    ><input
                      type="text"
                      name="currency"
                      id="currency"
                      value="<%= item.currency%>"
                      readonly
                    />
                  </div>

                  <div class="installment-div">
                    <label for="installment_allowed">Installments</label
                    ><input
                      type="text"
                      name="installment_allowed"
                      id="installment_allowed"
                      value="<%= item.installment_allowed%>"
                      readonly
                    />
                    <label for="advance_payment">Advance Payment</label
                    ><input
                      type="text"
                      name="advance_payment"
                      id="advance_payment"
                      value="<%= item.advance_payment%>"
                      readonly
                    />
                  </div>

                  <div class="additional-info-div">
                    <label for="additional-info">Additional Information</label
                    ><input
                      type="text"
                      name="additional_information"
                      id="additional_information"
                      value="<%= item.additional_informtion %>"
                      readonly
                    />
                    <label for="facilities">Facilities</label
                    ><input
                      type="text"
                      name="facilities"
                      id="facilities"
                      value="<%= item.facilities %>"
                      readonly
                    />
                    <label for="Image">Image</label>
                    <!--<input
                  type="text"
                  name="url"
                  id="url"
                  value=" <%= item.picture_public_id %>"
                  readonly
                />
                -->
                    <input
                      type="hidden"
                      name="picture_public_id"
                      value="<%= item.picture_public_id %>"
                    />
                    <input
                      type="hidden"
                      name="picture_public_url"
                      value="<%= item.picture_public_url %>"
                    />
                    <!-- <img
                  src="<%= item.picture_public_id %>"
                  alt="Image"
                  width="100px"
                  height="100px"
                /> -->
                    <a href="<%= item.picture_public_id %>" target="_blank"
                      >Click</a
                    >
                    <!-- <a href="<%= item.picture_public_id %>">Image</a> -->
                  </div>
                  <div class="buttons-category">
                    <input type="submit" name="button" value="Accept" />
                    <input type="submit" name="button" value="Reject" />
                  </div>
                </form>
              </div>
            </div>
            <% }) %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
<%- include("utils"); -%>
