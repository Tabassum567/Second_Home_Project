<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>
    <!-- ======= Styles ====== -->
    <link rel="stylesheet" href="/css/dashboard.css" />
    <link rel="stylesheet" href="/css/navbar.css" />
  </head>

  <body>
    <!-- =============== Navigation ================ -->
    <div class="container">
      <%- include("navbar"); -%>

      <!-- ========================= Main ==================== -->
      <div class="main">
        <div class="topbar">
          <div class="toggle">
            <ion-icon name="menu-outline"></ion-icon>
          </div>

          <div class="user">
            <ion-icon name="person-circle"></ion-icon>
          </div>
        </div>

        <!-- ======================= Cards ================== -->
        <div class="cardBox">
          <div class="card">
            <div>
              <div class="numbers"><%= user_num %></div>
              <div class="cardName">Students</div>
            </div>

            <div class="iconBx">
              <ion-icon name="people-outline"></ion-icon>
            </div>
          </div>

          <div class="card">
            <div>
              <div class="numbers"><%= owner_num %></div>
              <div class="cardName">Owners</div>
            </div>

            <div class="iconBx">
              <ion-icon name="person-outline"></ion-icon>
            </div>
          </div>

          <div class="card">
            <div>
              <div class="numbers">0</div>
              <div class="cardName">Bookings</div>
            </div>

            <div class="iconBx">
              <ion-icon name="medkit-outline"></ion-icon>
            </div>
          </div>

          <div class="card">
            <div>
              <div class="numbers"><%=post_num %></div>
              <div class="cardName">Property Adds</div>
            </div>

            <div class="iconBx">
              <ion-icon name="home-outline"></ion-icon>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>

<%- include("utils"); -%>
